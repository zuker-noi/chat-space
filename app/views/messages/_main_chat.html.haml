.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-box
      .chat-main__group-info__left-box__current-group
        test
      .chat-main__group-info__left-box__member
        Member:masa
    .chat-main__group-info__right-box
      = link_to "#", class: "chat-main__group-info__right-box__edit-btn" do
        Edit
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .chat-main__message-form__input-box
        .chat-main__message-form__input-box__text-field
          = f.text_field :content, placeholder: "type a message", class: ".chat-main__message-form__input-box__text-field__new-message"
          .chat-main__message-form__input-box__text-field__image
            = f.label :image, class: "chat-main__message-form__input-box__text-field__image__btn" do
              %i.fa.fa-image
              = f.file_field :image
        = f.submit "Send",class: "chat-main__message-form__input-box__submit-btn" 

