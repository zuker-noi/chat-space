.side-bar
  .side-bar__user-name
    .side-bar__user-name__box
      %p.side-bar__user-name__box__name
        = current_user.name
      %ul.side-bar__user-name__box__menu
        %li.side-bar__user-name__box__menu__new-group
          = link_to new_group_path, class: "side-bar__user-name__box__menu__new-group__btn" do
            = icon('far', 'edit')
        %li.side-bar__user-name__box__menu__edit-user
          = link_to edit_user_path(current_user), class: "side-bar__user-name__box__menu__edit-user__btn" do
            = icon('fa', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        = link_to '#' do
          %p.side-bar__group-list__group__name
            = group.name
          %p.side-bar__group-list__group__message
            まだメッセージがありません